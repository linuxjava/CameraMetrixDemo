<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dp"
        android:scaleType="matrix"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/translation_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100"/>

        <EditText
            android:id="@+id/scale_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"/>

        <EditText
            android:id="@+id/rotate_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30"/>

        <EditText
            android:id="@+id/skew_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.5"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/translation_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="平移"
            android:onClick="onClickTest"/>

        <Button
            android:id="@+id/scale_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="缩放"
            android:onClick="onClickTest"/>

        <Button
            android:id="@+id/rotate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="旋转"
            android:onClick="onClickTest"/>

        <Button
            android:id="@+id/skew_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="切错变换"
            android:onClick="onClickTest"/>
    </LinearLayout>

    <Button
        android:id="@+id/src_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="还原"
        android:onClick="onClickTest"/>

    <FrameLayout
        android:layout_width="200.0dp"
        android:layout_height="200.0dp"
        android:layout_marginTop="20.0dp"
        android:background="@android:color/black">
        <ImageView
            android:id="@+id/transfmation_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </FrameLayout>


</LinearLayout>
